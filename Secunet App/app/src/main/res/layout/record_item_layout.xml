<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:visibility="invisible"
            card_view:backgroundTint="@color/cardview_light_background"
            card_view:elevation="0dp"
            card_view:fabSize="mini"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:rippleColor="@color/gray"
            card_view:srcCompat="@drawable/ic_info_outline_black_24dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/floatingActionButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="January 01 2018 "
            android:textSize="21sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/tv_hospital"
            card_view:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="11dp"
            android:text="Hopital BiyemAssi- Lac"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/tv_hash"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_hash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_hospital"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="d04b98f48e8f8bcc15c6ae5ac050801cd6dcfd428fb5f9e65c4e16e7807340fa "
            card_view:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>